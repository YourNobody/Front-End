{
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    "outDir": "js",
    "sourceMap": true,
    "module": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@Components": ["components/"],
      "@Helpers": ["helpers/"],
      "@PageComponents": ["pageComponents/"],
      "@Hooks": ["hooks/"],
      "@Constants": ["constants/"],
      "@Interfaces/*": ["interfaces/*"],
      "@Layouts": ["layouts/"],
      "@Slices": ["store/reducers/"],
      "@ActionCreators/*": ["store/action-creators/*"]
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
